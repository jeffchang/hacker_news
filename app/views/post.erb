<h3 id="#post_title"><%= @selected_post.title %></h3>
<div id="post-comments" class="container">
  <form action="/<%= @selected_post.id %>" method="post">
    <textarea name="comment_content" rows="5" cols="40" required></textarea>
    <br>
    <input type="submit" name="comment_submit" value="Comment">
  </form>
  <% @post_comments.each do |comment| %>
    <%= comment.user %>
    <br>
    <%= comment.content %>
  <% end %>
</div>